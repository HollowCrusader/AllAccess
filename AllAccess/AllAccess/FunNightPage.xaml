                </StackLayout>
            </FlexLayout>
            <FlexLayout>

                <StackLayout>
                        <Image x:Name="bowlingBtn" Source="BowlingBtn.png">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GetSearchCommand}"></TapGestureRecognizer>
                            </Image.GestureRecognizers>
                        </Image>
                        <Label x:Name="bowlingLabel" TextColor="White" Text="Bowling" HorizontalOptions="Center" FontAttributes="Bold"/>
