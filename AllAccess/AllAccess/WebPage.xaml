<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:viewmodel="clr-namespace:AllAccess.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AllAccess.WebPage"
			  NavigationPage.HasBackButton="False"
					   NavigationPage.HasNavigationBar="False">
    <!--<ContentPage.BindingContext>
        <viewmodel:DetailViewModel/>
        </ContentPage.BindingContext>-->
    <ContentPage.Content>
        <StackLayout>
            <Frame CornerRadius="5" Padding="2">
                <StackLayout BackgroundColor="#013301" Orientation="Horizontal" Margin="5">
                    <Image x:Name="back" Source="Back.png" WidthRequest="50" HeightRequest="50" HorizontalOptions="Start" Margin="5,0,0,0"/>
                    <Label Text = "AllAccess.US" TextColor="White"  HorizontalOptions="CenterAndExpand" FontSize="25" FontAttributes="Bold"/>
                    <Image x:Name="open" Source="OpenBrowser.png" WidthRequest="50" HeightRequest="50" HorizontalOptions="End" Margin="0,0,5,0"/>
                </StackLayout>
            </Frame>
        <WebView x:Name="web" IsVisible="true" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>
